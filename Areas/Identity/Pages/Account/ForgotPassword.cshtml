@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "¿Olvidaste tu contraseña?";
}

<section class="vh-100 d-flex align-items-start justify-content-center">
    <div class="container">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-lg-8">
                <div class="row g-0 shadow-lg rounded-4 overflow-hidden" style="max-height: 90vh;">
                    <!-- Formulario -->
                    <div class="col-md-6 bg-white d-flex align-items-center">
                        <div class="p-5 w-100">
                            <div class="text-center mb-4">
                                <img id="logoEmpresa" src="@Url.Action("GetLogo", "Empresa")" alt="LOGO"
                                    class="logo-navbar" style="height: 60px; width: auto;"
                                    onerror="this.style.display='none'; document.getElementById('altLogo').style.display='inline';" />

                                <span id="altLogo" class="fw-bold text-dark" style="display: none;">LOGO</span>
                                <h3 class="fw-bold mb-2" style="color: #0077cc;">Recuperar contraseña</h3>
                                <p class="text-muted">Introduce tu correo electrónico para restablecer tu contraseña</p>
                            </div>

                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                                <div class="form-outline mb-4">
                                    <label asp-for="Input.Email" class="form-label">Correo electrónico</label>
                                    <input asp-for="Input.Email" class="form-control form-control-lg"
                                        autocomplete="username" aria-required="true" placeholder="nombre@ejemplo.com" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>

                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        Restablecer contraseña
                                    </button>
                                </div>

                                <div class="mt-3 text-center">
                                    <a class="small text-muted" asp-page="./Login">Volver al inicio de sesión</a>
                                </div>

                                @if (User.Identity.IsAuthenticated)
                                {
                                    <p class="mt-4 mb-0 text-center text-muted">
                                        ¿No tienes una cuenta?
                                        <a asp-page="./Register" class="text-primary">
                                            Regístrate aquí
                                        </a>
                                    </p>
                                }

                                <div class="mt-4 text-center">
                                    <a href="#" class="small text-muted me-2">Términos de uso</a>
                                    <a href="#" class="small text-muted">Políticas de Privacidad</a>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Imagen lateral -->
                    <div class="col-md-6 d-none d-md-flex position-relative">
                        <img src="~/images/password-reset.jpeg" alt="recuperación de contraseña"
                            class="img-fluid h-100 w-100"
                            style="object-fit: cover; object-position: center; min-height: 100%;" />
                        <div class="position-absolute top-0 start-0 w-100 h-100"
                            style="background: linear-gradient(rgba(0, 119, 204, 0.1), rgba(0, 119, 204, 0.3));"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}