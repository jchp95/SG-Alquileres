@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "Autenticación en dos pasos";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center">@ViewData["Title"]</h2>
                </div>
                <div class="card-body">
                    <p class="text-muted">
                        <i class="fas fa-shield-alt me-2"></i>
                        Tu inicio de sesión está protegido con una aplicación de autenticación.
                        Ingresa tu código de autenticación a continuación.
                    </p>
                    <hr />

                    <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
                        <input asp-for="RememberMe" type="hidden" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.TwoFactorCode" class="form-control" autocomplete="off"
                                placeholder="Código de autenticación" />
                            <label asp-for="Input.TwoFactorCode" class="form-label">
                                <i class="fas fa-key me-2"></i>Código de autenticación
                            </label>
                            <span asp-validation-for="Input.TwoFactorCode" class="text-danger small"></span>
                        </div>

                        <div class="form-check mb-4">
                            <input asp-for="Input.RememberMachine" class="form-check-input" />
                            <label asp-for="Input.RememberMachine" class="form-check-label">
                                Recordar este dispositivo
                            </label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i>Iniciar sesión
                            </button>
                        </div>
                    </form>

                    <div class="mt-4 text-center">
                        <p class="small">
                            ¿No tienes acceso a tu dispositivo de autenticación? Puedes
                            <a id="recovery-code-login" asp-page="./LoginWithRecoveryCode"
                                asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none">
                                iniciar sesión con un código de recuperación
                            </a>.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}