@page
@model LogoutModel
@{
    ViewData["Title"] = "Cerrar sesión";
}

<header class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="mt-4" asp-area="Identity" asp-page="/Account/Logout"
                asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="fas fa-sign-out-alt"></i> Haz clic aquí para cerrar sesión
                </button>
            </form>
        }
        else
        {
            <div class="alert alert-success mt-4">
                <i class="fas fa-check-circle"></i> Has cerrado sesión correctamente.
            </div>
            <p class="mt-3">
                <a href="@Url.Page("/Account/Login")" class="btn btn-primary">
                    <i class="fas fa-sign-in-alt"></i> Volver a iniciar sesión
                </a>
            </p>
        }
    }
</header>
