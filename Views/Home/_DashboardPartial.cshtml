<div class="dashboard-container">
    <!-- Header con bienvenida y búsqueda -->
    <header class="dashboard-header">
        <div class="welcome-section">
            <h1 class="welcome-title">Bienvenido, <span class="user-name">@ViewData["NombreUsuario"]</span></h1>
            <p class="welcome-subtitle">Resumen de tu actividad de alquileres</p>
        </div>
    </header>

    <!-- Sección de métricas clave -->
    <section class="metrics-section">
        <div class="metric-card">
            <div class="metric-content">
                <h3 class="metric-title">Propiedades Activas</h3>
                <p class="metric-value">24</p>
                <p class="metric-change positive">+2 este mes</p>
            </div>
            <div class="metric-icon">
                <i class="fas fa-home"></i>
            </div>
        </div>

        <div class="metric-card">
            <div class="metric-content">
                <h3 class="metric-title">Ingresos Mensuales</h3>
                <p class="metric-value">$12,450</p>
                <p class="metric-change positive">+5% vs mes pasado</p>
            </div>
            <div class="metric-icon">
                <i class="fas fa-chart-line"></i>
            </div>
        </div>

        <div class="metric-card alert">
            <div class="metric-content">
                <h3 class="metric-title">Pagos Pendientes</h3>
                <p class="metric-change negative">Revisión requerida</p>
            </div>
            <div class="metric-icon">
                <i class="fas fa-exclamation-circle"></i>
            </div>
        </div>

        <div class="metric-card">
            <div class="metric-content">
                <h3 class="metric-title">Ocupación</h3>
                <p class="metric-value">92%</p>
                <p class="metric-change neutral">Estable</p>
            </div>
            <div class="metric-icon">
                <i class="fas fa-percentage"></i>
            </div>
        </div>
    </section>

    <!-- Sección de acciones rápidas -->
    <section class="quick-actions">
        <h2 class="section-title">Acciones Rápidas</h2>
        <div class="actions-grid">
            <button class="action-btn">
                <i class="fas fa-user-plus"></i>
                <span>Crear Inquilino</span>
            </button>
            <button class="action-btn">
                <i class="fas fa-user-plus"></i>
                <span>Crear Propietario</span>
            </button>
            <button class="action-btn">
                <i class="fas fa-home"></i>
                <span>Crear Inmueble</span>
            </button>
            <button class="action-btn">
                <i class="fas fa-file-invoice-dollar"></i>
                <span>Crear CxC</span>
            </button>
            <button class="action-btn">
                <i class="fas fa-plus-circle"></i>
                <span>Crear Cobro</span>
            </button>
        </div>
    </section>

    <!-- Sección de últimos movimientos -->
    <section class="recent-activity">
        <div class="activity-header">
            <h2 class="section-title">Actividad Reciente</h2>
            <a href="#" class="view-all">Ver todo</a>
        </div>
        <div class="activity-list">
            <div class="activity-item">
                <div class="activity-icon success">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="activity-content">
                    <p class="activity-title">Pago recibido</p>
                    <p class="activity-details">Departamento #302 - $850</p>
                    <p class="activity-time">Hace 2 horas</p>
                </div>
            </div>
            <div class="activity-item">
                <div class="activity-icon warning">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <div class="activity-content">
                    <p class="activity-title">Pago atrasado</p>
                    <p class="activity-details">Casa en Av. Principal - $1,200</p>
                    <p class="activity-time">Ayer</p>
                </div>
            </div>
            <div class="activity-item">
                <div class="activity-icon info">
                    <i class="fas fa-file-signature"></i>
                </div>
                <div class="activity-content">
                    <p class="activity-title">Nuevo contrato</p>
                    <p class="activity-details">Local comercial - 12 meses</p>
                    <p class="activity-time">3 días atrás</p>
                </div>
            </div>
        </div>
    </section>
</div>
