@model IEnumerable<ReporteViewModel>

<div class="container-fluid px-4 py-4">
    <!-- Header -->
    <div
        class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3">
        <div>
            <h2 class="mb-1">
                <i class="fas fa-exclamation-triangle me-2 text-danger"></i>Reporte de Atrasos
            </h2>
            <p class="text-muted mb-0">Consulta detallada de los atrasos en pagos</p>
        </div>
    </div>

    <!-- Card de Filtros -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-4">
            <div
                class="d-flex flex-column flex-lg-row align-items-start align-items-lg-center justify-content-between gap-3 mb-3">
                <h5 class="card-title mb-0"><i class="fas fa-filter me-2 text-danger"></i>Filtros del Reporte</h5>
                <div class="d-flex gap-2 w-100 w-lg-auto">
                    <button id="btnResetFiltros" class="btn btn-outline-danger btn-sm" data-bs-toggle="tooltip"
                        data-bs-placement="right" title="Limpiar todos los filtros">
                        <i class="fas fa-broom me-2"></i> Limpiar filtros
                    </button>
                </div>
            </div>

            <div class="row g-3">
                <!-- Filtro por inquilino -->
                <div class="col-xl-3 col-lg-4 col-md-6 col-12">
                    <label for="busquedaInquilino" class="form-label small text-muted mb-1">Inquilinos</label>
                    <div class="input-group">
                        <select id="busquedaInquilino" class="form-select select2">
                            <option></option>
                        </select>
                        <input type="hidden" id="FidInquilino" name="FidInquilino" />
                    </div>
                </div>

                <!-- Filtro por inmueble -->
                <div class="col-xl-3 col-lg-4 col-md-6 col-12">
                    <label for="busquedaInmueble" class="form-label small text-muted mb-1">Inmuebles</label>
                    <div class="input-group">
                        <select id="busquedaInmueble" class="form-select select2">
                            <option></option>
                        </select>
                        <input type="hidden" id="FidInmueble" name="FidInmueble" />
                    </div>
                </div>

                <div class="col-xl-3 col-lg-4 col-md-6 col-12">
                    <label for="cuotasMin" class="form-label small text-muted mb-1">Cuotas atrasadas (Mín)</label>
                    <input type="number" id="cuotasMin" class="form-control" placeholder="Mínimo" min="0">
                </div>

                <div class="col-xl-3 col-lg-4 col-md-6 col-12">
                    <label for="cuotasMax" class="form-label small text-muted mb-1">Cuotas atrasadas (Máx)</label>
                    <input type="number" id="cuotasMax" class="form-control" placeholder="Máximo" min="0">
                </div>
            </div>
        </div>
    </div>

    <!-- Card de Resultados -->
    <div class="card border-0 shadow-sm px-4 py-4">
        <div class="card-body p-0">
            <!-- Panel de Totales -->
            <div class="row mb-3">
                <div class="col-12">
                    <div class="p-3 bg-light rounded">
                        <div class="row g-2 g-sm-3">
                            <div class="col-12 col-sm-6 col-lg-3">
                                <div class="text-center">
                                    <span class="badge rounded-pill bg-secondary fs-5 w-100 d-flex flex-column flex-sm-row align-items-center justify-content-center gap-1 px-3 py-2">
                                        <span>Registros:</span>
                                        <span id="totalRegistros">0</span>
                                    </span>
                                </div>
                            </div>
                            <div class="col-12 col-sm-6 col-lg-3">
                                <div class="text-center">
                                    <span class="badge rounded-pill bg-danger fs-5 w-100 d-flex flex-column flex-sm-row align-items-center justify-content-center gap-1 px-3 py-2">
                                        <span>Total Atrasos:</span>
                                        <span id="totalAtrasos">RD$ 0.00</span>
                                    </span>
                                </div>
                            </div>
                            <div class="col-12 col-sm-6 col-lg-3">
                                <div class="text-center">
                                    <span class="badge rounded-pill bg-warning fs-5 w-100 d-flex flex-column flex-sm-row align-items-center justify-content-center gap-1 px-3 py-2">
                                        <span>Total Mora:</span>
                                        <span id="totalMora">RD$ 0.00</span>
                                    </span>
                                </div>
                            </div>
                            <div class="col-12 col-sm-6 col-lg-3">
                                <div class="text-center">
                                    <span class="badge rounded-pill bg-primary fs-5 w-100 d-flex flex-column flex-sm-row align-items-center justify-content-center gap-1 px-3 py-2">
                                        <span>Gran Total:</span>
                                        <span id="granTotal">RD$ 0.00</span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="table-responsive">
                <table id="reporteAtrasosTable" class="table align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Usuario</th>
                            <th>Inquilino</th>
                            <th>Inmueble</th>
                            <th>Dirección</th>
                            <th>Cant. Cuotas Atrasadas</th>
                            <th>Monto Total Atraso</th>
                            <th>Mora</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.NombreUsuario</td>
                                <td>@item.NombreInquilino</td>
                                <td>@item.DireccionInmueble</td>
                                <td>@item.UbicacionInmueble</td>
                                <td>@item.CantCuotasAtrasadas</td>
                                <td>@item.MontoTotalAtraso.ToString("N2", new System.Globalization.CultureInfo("es-DO"))
                                </td>
                                <td>@item.MoraTotal.ToString("N2")</td>
                                <td>@item.Total.ToString("N2", new System.Globalization.CultureInfo("es-DO"))</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>