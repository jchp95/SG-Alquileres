@model IEnumerable<ReporteViewModel>

<div class="container-fluid px-4 py-4">
    <!-- Header -->
    <div
        class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3">
        <div>
            <h2 class="mb-1">
                <i class="fas fa-exclamation-triangle me-2 text-danger"></i>Reporte de Atrasos
            </h2>
            <p class="text-muted mb-0">Consulta detallada de los atrasos en pagos</p>
        </div>
    </div>

    <!-- Card de Filtros -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-4">
            <div
                class="d-flex flex-column flex-lg-row align-items-start align-items-lg-center justify-content-between gap-3 mb-3">
                <h5 class="card-title mb-0"><i class="fas fa-filter me-2 text-danger"></i>Filtros del Reporte</h5>
                <div class="d-flex gap-2 w-100 w-lg-auto">
                    <button id="btnResetFiltros" class="btn btn-outline-danger btn-sm" data-bs-toggle="tooltip"
                        data-bs-placement="right" title="Limpiar todos los filtros">
                        <i class="fas fa-broom me-2"></i> Limpiar filtros
                    </button>
                </div>
            </div>

            <div class="row g-3">
                <!-- Filtro por usuario -->
                <div class="col-md-3">
                    <label for="busquedaUsuario" class="form-label small text-muted mb-1">Usuarios</label>
                    <select id="busquedaUsuario" class="form-select select2" style="width: 100%">
                        <option></option>
                    </select>
                    <input type="hidden" id="NombreUsuario" name="NombreUsuario" />
                </div>

                <!-- Filtro por inquilino -->
                <div class="col-md-3">
                    <label for="filtroInquilino" class="form-label small text-muted mb-1">Inquilino</label>
                    <input type="text" class="form-control" id="filtroInquilino" placeholder="Nombre o Apellido">
                </div>
            </div>
        </div>
    </div>

    <!-- Card de Resultados -->
    <div class="card border-0 shadow-sm px-4 py-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table id="reporteAtrasosTable"
                    class="table table-hover align-middle mb-0 table-striped table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>Nombre de Usuario</th>
                            <th>Inquilino</th>
                            <th>Dirección Inmueble</th>
                            <th>Ubicación Inmueble</th>
                            <th>Cant. Cuotas Atrasadas</th>
                            <th>Monto Total Atraso</th>
                            <th>Mora (%)</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.NombreUsuario</td>
                                <td>@item.NombreInquilino</td>
                                <td>@item.DireccionInmueble</td>
                                <td>@item.UbicacionInmueble</td>
                                <td>@item.CantCuotasAtrasadas</td>
                                <td>RD$ @item.MontoTotalAtraso.ToString("N2", new System.Globalization.CultureInfo("es-DO"))
                                </td>
                                <td>@item.Mora.ToString("N2")</td>
                                <td>RD$ @item.Total.ToString("N2", new System.Globalization.CultureInfo("es-DO"))</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>