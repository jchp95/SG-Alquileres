@model ReporteViewModel

<div class="container-fluid px-4 py-4">
    <!-- Header -->
    <div
        class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3">
        <div>
            <h2 class="mb-1">
                <i class="fas fa-calculator me-2 text-danger"></i>Reporte de Estado Ingresos/Gastos
            </h2>
            <p class="text-muted mb-0">Consulta detallada del estado de los gastos</p>
        </div>
    </div>

    <!-- Card de Filtros -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-4">
            <div
                class="d-flex flex-column flex-lg-row align-items-start align-items-lg-center justify-content-between gap-3 mb-3">
                <h5 class="card-title mb-0"><i class="fas fa-filter me-2 text-danger"></i>Filtros del Reporte</h5>
                <div class="d-flex gap-2 w-100 w-lg-auto">
                    <button id="btnResetFiltros" class="btn btn-outline-danger btn-sm" data-bs-toggle="tooltip"
                        data-bs-placement="right" title="Limpiar todos los filtros">
                        <i class="fas fa-broom me-2"></i> Limpiar filtros
                    </button>
                </div>
            </div>

            <div class="row">
                <!-- Filtro por fecha inicial -->
                <div class="col-md-3">
                    <label for="fechaInicioFiltro" class="form-label small text-muted mb-1">Fecha Inicial</label>
                    <input type="date" class="form-control" id="fechaInicioFiltro">
                </div>

                <!-- Filtro por fecha final -->
                <div class="col-md-3">
                    <label for="fechaFinFiltro" class="form-label small text-muted mb-1">Fecha Final</label>
                    <input type="date" class="form-control" id="fechaFinFiltro">
                </div>

                <!-- BotÃ³n Generar -->
                <div class="col-md-3 d-flex align-items-end">
                    <button id="btnGenerarReporte" class="btn btn-danger">
                        <i class="fas fa-play me-2"></i>Generar Reporte
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm px-4 py-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table id="reporteEstadoGastoTable" class="table align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Ingresos</th>
                            <th>Gastos</th>
                            <th>Resultados</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.HayDatos)
                        {
                            <tr>
                                <td>@Model.Ingresos.ToString("C")</td>
                                <td>@Model.Gastos.ToString("C")</td>
                                <td>@Model.Resultados.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>