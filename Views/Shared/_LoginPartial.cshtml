@using Microsoft.AspNetCore.Identity
@using Alquileres.Models

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {

        <li class="nav-item">
            <a class="nav-link" id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" data-toggle="tooltip"
                data-html="true" data-placement="right" title="Administrar datos de la cuenta">
                <i class="fas fa-user" aria-hidden="true"></i>Mi Cuenta
            </a>
        </li>
        <li class="nav-item">
            <form asp-area="Identity" asp-page="/Account/Logout"
                asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" data-toggle="tooltip" data-html="true" data-placement="right" title="Salir"
                    class="nav-link">
                    <i class="fas fa-sign-out-alt"></i>
                </button>
            </form>
        </li>
    }
    else
    {
        @if (User.Identity.IsAuthenticated)
        {
            <li class="nav-item">
                <a class="nav-link" id="register" asp-area="Identity" asp-page="/Account/Register" data-toggle="tooltip"
                    data-html="true" data-placement="right" title="Registrarse">
                    <i class="fas fa-user-plus"></i> Registrar
                </a>
            </li>
        }

        <li class="nav-item">
            <a class="nav-link" id="login" asp-area="Identity" asp-page="/Account/Login" data-toggle="tooltip"
                data-html="true" data-placement="right" title="Acceder">
                <i class="fas fa-sign-in-alt"></i> Acceder
            </a>
        </li>
    }
</ul>
