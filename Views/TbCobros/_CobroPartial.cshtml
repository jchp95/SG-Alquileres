@model IEnumerable<CobroViewModel>

<div class="container-fluid px-4 py-4">
    <!-- Header -->
    <div
        class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3">
        <div>
            <h2 class="mb-1"><i class="fas fa-receipt me-2 text-primary"></i>Registro de Cobros</h2>
            <p class="text-muted mb-0">Gestión y consulta de transacciones</p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-primary">
                <i class="fas fa-file-export me-1"></i> Exportar
            </button>
        </div>
    </div>

    <!-- Card de Filtros -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-4">
            <div
                class="d-flex flex-column flex-lg-row align-items-start align-items-lg-center justify-content-between gap-3 mb-3">
                <h5 class="card-title mb-0"><i class="fas fa-filter me-2 text-primary"></i>Filtros Avanzados</h5>
                <div class="d-flex gap-2 w-100 w-lg-auto">
                    <button id="btnFiltrar" class="btn btn-primary flex-grow-1 flex-lg-grow-0">
                        <i class="fas fa-filter me-1"></i> Filtrar
                    </button>
                    <button id="btnReset" class="btn btn-outline-secondary">
                        <i class="fas fa-undo"></i>
                    </button>
                </div>
            </div>

            <div class="row g-3">
                <!-- Filtro por fechas -->
                <div class="col-md-6">
                    <label for="min" class="form-label small text-muted mb-1">Fecha desde</label>
                    <div class="input-group">
                        <span class="input-group-text bg-transparent">
                            <i class="far fa-calendar text-muted"></i>
                        </span>
                        <input type="text" class="form-control" id="min" placeholder="DD/MM/AAAA">
                        <button class="btn btn-outline-secondary" type="button" id="min-clear">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="col-md-6">
                    <label for="max" class="form-label small text-muted mb-1">Fecha hasta</label>
                    <div class="input-group">
                        <span class="input-group-text bg-transparent">
                            <i class="far fa-calendar text-muted"></i>
                        </span>
                        <input type="text" class="form-control" id="max" placeholder="DD/MM/AAAA">
                        <button class="btn btn-outline-secondary" type="button" id="max-clear">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Card de Resultados -->
    <div class="card border-0 shadow-sm px-4 py-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table id="tablaCobros" class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">ID</th>
                            <th>Fecha</th>
                            <th>Hora</th>
                            <th class="text-end pe-3">Monto</th>
                            <th class="text-end pe-3">Descuento</th>
                            <th class="text-end pe-3">Cargos</th>
                            <th>Concepto</th>
                            <th>Origen</th>
                            <th class="text-center pe-4">Estado</th>
                            <th class="text-center pe-4">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-medium">#@item.FidCobro</td>
                                <td>
                                    <span class="badge bg-light text-dark">
                                        @item.Ffecha.ToString("dd/MM/yyyy")
                                    </span>
                                </td>
                                <td>@item.Fhora.ToString("hh:mm:ss")</td>
                                <td class="text-end pe-3 fw-bold">@item.Fmonto.ToString("N2", new
                                                                    System.Globalization.CultureInfo("es-DO"))</td>
                            <td class="text-end pe-3 text-danger">@item.Fdescuento.ToString("N2", new
                                                                System.Globalization.CultureInfo("es-DO"))</td>
                            <td class="text-end pe-3 text-success">@item.Fcargos.ToString("N2", new
                                                                System.Globalization.CultureInfo("es-DO"))</td>
                            <td>
                                <span class="d-inline-block text-truncate" style="max-width: 150px;"
                                    title="@item.Fconcepto">
                                    @item.Fconcepto
                                </span>
                            </td>
                            <td>
                                <span class="badge bg-primary bg-opacity-10 text-primary">
                                    @item.NombreOrigen
                                </span>
                            </td>
                            <td>
                                <span
                                    class="badge @(item.Factivo ? "bg-success bg-opacity-10 text-success" : "bg-danger bg-opacity-10 text-danger")">
                                    @(item.Factivo ? "Activo" : "Anulado")
                                </span>
                            </td>
                            <td class="text-center pe-4">
                                <div class="d-flex justify-content-center gap-2">

                                    @if (item.Factivo)
                                        {
                                            <a href="#" title="Ver detalles" class="btn btn-sm btn-outline-primary btn-detalles"
                                                data-id="@item.FidCobro">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="javascript:void(0);" class="btn btn-sm btn-outline-primary editInquilino"
                                                data-id="@item.FidCobro" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form method="post" class="d-inline anularCobroForm">
                                                <input type="hidden" name="cobroId" value="@item.FidCobro" />
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                                    title="Anular cobro">
                                                    <i class="fas fa-ban"></i>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-outline-primary" title="Detalles (Anulado)" disabled>
                                                <i class="fas fa-eye"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-primary" title="Editar (Anulado)" disabled>
                                                <i class="fas fa-edit"></i>
                                            </button>
                                            <button class="btn btn-sm btn-outline-secondary" title="Cobro anulado" disabled>
                                                <i class="fas fa-ban"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Confirmación de Anulación -->
<div class="modal fade" id="confirmAnularModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0 bg-danger text-white">
                <h5 class="modal-title">Confirmar Anulación de Cobro</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="anulacionForm">
                    <div class="mb-3">
                        <label for="motivoAnulacion" class="form-label">Motivo de la anulación</label>
                        <textarea class="form-control" id="motivoAnulacion" rows="3" required></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="usuarioNombre" class="form-label">Usuario</label>
                        <input type="text" class="form-control" id="userName" value="@User.Identity?.Name" readonly>
                    </div>

                    <div class="mb-3">
                        <label for="usuarioPassword" class="form-label">Contraseña</label>
                        <input type="password" class="form-control" id="usuarioPassword" required>
                    </div>
                </form>

                <div class="alert alert-warning mt-3">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Esta acción revertirá todas las cuotas afectadas y no se puede deshacer.
                </div>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger" id="confirmAnularBtn">
                    <i class="fas fa-ban me-1"></i> Anular Cobro
                </button>
            </div>
        </div>
    </div>
</div>
