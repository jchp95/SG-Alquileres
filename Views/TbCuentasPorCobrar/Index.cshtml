@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Gestión de Cuentas por Cobrar";
}

<div class="container-fluid">
    <!-- Encabezado descriptivo -->
    <div class="row mb-4">
        <div class="col-12 col-md-auto">
            <div class="d-flex flex-column flex-md-row">
                <div class="content" style="order: 1;">
                    <!-- Aquí va el contenido que quieres que aparezca primero en móvil -->
                </div>
                <div class="buttons" style="order: 2;">
                    <div class="btn-group mt-2 mt-md-0" role="group">
                        <!--<button id="createCuentaPorCobrar" class="btn btn-primary btn-sm">
                            <i class="fas fa-plus me-1"></i> Nueva Cuenta
                        </button>
                        <button id="loadCuentasPorCobrar" class="btn btn-secondary btn-sm">
                            <i class="fas fa-search me-1"></i> Consultar CxC
                        </button>-->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="vistaSeleccionada" data-vista="@ViewData["Vista"]"></div>

    <!-- Contenedor para toasts -->
    <div id="toastContainer" class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 11"></div>

    <!-- Spinner superpuesto -->
    <div id="loadingSpinner" class="overlay-spinner" style="display: none;">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
        <p class="mt-3 text-dark">Procesando su solicitud...</p>
    </div>

    <!-- Contenedor principal de datos -->
    <div id="dataTableContainer" class="welcomeMessage" style="display: none;"></div>

    <!-- Mensaje inicial cuando no hay datos visibles
    <div id="welcomeMessage" class="text-center py-5">
        <i class="fas fa-file-invoice-dollar fa-4x text-muted mb-4"></i>
        <h4 class="text-secondary">Gestión de Cuentas por Cobrar</h4>
        <p class="text-muted xl mb-0">
            Este módulo le permite registrar las cuentas por cobrar relacionadas a los inquilinos de
            cada
            inmueble.
        </p>
    </div> -->
</div>

<!-- Filtros avanzados -->
<div class="row mb-4 collapse" id="filtersContainer">
    <div class="col-md-12">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-filter me-2"></i>Filtros Avanzados</h5>
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Estado</label>
                        <select class="form-select">
                            <option selected>Todos</option>
                            <option>Pendiente</option>
                            <option>Parcial</option>
                            <option>Pagado</option>
                            <option>Vencido</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Fecha Desde</label>
                        <input type="date" class="form-control">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Fecha Hasta</label>
                        <input type="date" class="form-control">
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button class="btn btn-outline-primary w-100">
                            <i class="fas fa-search me-1"></i> Filtrar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        #welcomeMessage {
            transition: all 0.3s ease;
        }

        .badge {
            font-size: 0.85rem;
        }
    </style>
}

@section Scripts {
    <script src="~/js/cuentaPorCobrar.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            // Oculta el mensaje de bienvenida cuando se hace clic en cualquier botón
            $('.btn-group button').click(function () {
                $('#welcomeMessage').fadeOut(300, function () {
                    // Aquí puedes agregar lógica adicional si es necesario
                });
            });

            // Toggle para filtros avanzados
            $('#toggleFilters').click(function () {
                $('#filtersContainer').collapse('toggle');
            });

            // Si necesitas mostrar el mensaje de nuevo en algún caso
            function showWelcomeMessage() {
                $('#welcomeMessage').fadeIn(300);
            }
        });
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const vista = document.getElementById("vistaSeleccionada").dataset.vista;
            if (vista === "lista") {
                cargarTablaCuentasPorCobrar();
            } else {
                cargarVistaCrearCuentaPorCobrar();
            }
        });
    </script>
}