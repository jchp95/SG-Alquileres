@model IEnumerable<Alquileres.Models.TbCxcCuotum>

<!-- Card de Resultados -->
<div class="card border-0 shadow-sm px-4 py-4">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table id="cuotaTable" class="table table-hover align-middle mb-0 table-responsive">
                <thead>
                    <tr>
                        <th>ID CxC</th>
                        <th>Número Cuota</th>
                        <th>Fecha Vencimiento</th>
                        <th>Monto</th>
                        <th>Saldo</th>
                        <th>Mora</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FkidCxc</td>
                            <td>@item.FNumeroCuota</td>
                            <td>@item.Fvence.ToString("dd/MM/yyyy")</td>
                            <td>@item.Fmonto.ToString("N2", new System.Globalization.CultureInfo("es-DO"))</td>
                            <td>@item.Fsaldo.ToString("N2", new System.Globalization.CultureInfo("es-DO"))</td>
                            <td>@item.Fmora.ToString("N2", new System.Globalization.CultureInfo("es-DO"))</td>
                            <td>
                                @if (item.Fstatus == 'N')
                                {
                                    <span class="badge bg-warning">Pendiente</span>
                                }
                                else if (item.Fstatus == 'V')
                                {
                                    <span class="badge bg-danger">Vencida</span>
                                }
                                else if (item.Fstatus == 'S')
                                {
                                    <span class="badge bg-success">Pagada</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@item.Fstatus</span>
                                }
                            </td>
                        </tr>
                    }
                    <!-- Cierre del bloque foreach -->
                </tbody>
            </table>
        </div>
    </div>
</div>