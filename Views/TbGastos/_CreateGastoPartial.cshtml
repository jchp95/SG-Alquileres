@model Alquileres.Models.GastoViewModel

@{
    ViewData["Title"] = "Crear Gastos";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="d-flex align-items-center mb-3">
            <i class="fas fa-money-bill-wave text-primary fs-4 me-2"></i>
            <h4 class="mb-0">Crear Gastos</h4>
        </div>

        <form id="gastoForm" asp-action="CreateGasto" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label class="control-label">Tipo de Gasto</label>
                <select name="FkidGastoTipo" class="form-control select2" id="FkidGastoTipo">
                    <option value="">-- Seleccione un tipo de gasto --</option>
                    @foreach (var tipo in ViewBag.TiposGasto)
                    {
                        <option value="@tipo.FidGastoTipo">@tipo.Fdescripcion</option>
                    }
                </select>
                <span class="text-danger field-validation-valid" data-valmsg-for="FkidGastoTipo"
                    data-valmsg-replace="true"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Monto</label>
                <input name="Fmonto" class="form-control numeric-input" placeholder="Monto del gasto" id="Fmonto" />
                <span class="text-danger field-validation-valid" data-valmsg-for="Fmonto"
                    data-valmsg-replace="true"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Fecha</label>
                <input name="Ffecha" class="form-control" type="date" id="Ffecha" />
                <span class="text-danger field-validation-valid" data-valmsg-for="Ffecha"
                    data-valmsg-replace="true"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Notas</label>
                <input name="Fdescripcion" class="form-control" placeholder="DescripciÃ³n del gasto realizado"
                    id="Fdescripcion" />
                <span class="text-danger field-validation-valid" data-valmsg-for="Fdescripcion"
                    data-valmsg-replace="true"></span>
            </div>

            <div class="form-group-button mt-2">
                <button type="submit" class="btn btn-primary">Crear</button>
                <!--<a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>-->
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}