@using System.Globalization
@model Alquileres.Models.TbInmueble

<h3 class="mb-4">Editar Inmueble</h3>

<div class="card shadow-sm rounded-4 p-4 mb-4">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        <input type="hidden" asp-for="FidInmueble" />

        <div class="mb-3">
            <label class="form-label">Propietario</label>
            <input type="text" class="form-control rounded-3" value="@ViewBag.PropietarioNombre" readonly />
            <input type="hidden" asp-for="FkidPropietario" />
        </div>

        <div class="mb-3">
            <label asp-for="Fdescripcion" class="form-label">Descripción</label>
            <input asp-for="Fdescripcion" class="form-control rounded-3" />
            <span asp-validation-for="Fdescripcion" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Fdireccion" class="form-label">Dirección</label>
            <input asp-for="Fdireccion" class="form-control rounded-3" />
            <span asp-validation-for="Fdireccion" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Fubicacion" class="form-label">Ubicación</label>
            <input asp-for="Fubicacion" class="form-control rounded-3" />
            <span asp-validation-for="Fubicacion" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Fprecio" class="form-label">Precio</label>
            <input asp-for="Fprecio" class="form-control rounded-3"
                value="@Model.Fprecio.ToString("N2", new CultureInfo("es-DO"))" />
            <span asp-validation-for="Fprecio" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <input type="submit" value="Guardar" class="btn btn-primary px-4 shadow-sm" />
            <a asp-action="Index" class="btn btn-outline-secondary px-4">Volver a la lista</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}