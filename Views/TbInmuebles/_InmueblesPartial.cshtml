@model IEnumerable<Alquileres.Models.InmuebleViewModel>

<div class="container-fluid px-4 py-4">
    <!-- Header -->
    <div
        class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3">
        <div>
            <h2 class="mb-1"><i class="fas fa-home me-2 text-primary"></i>Registro de Inmuebles</h2>
            <p class="text-muted mb-0">Gestión y consulta de propiedades</p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-primary">
                <i class="fas fa-file-export me-1"></i> Exportar
            </button>
        </div>
    </div>

    <!-- Card de Filtros -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-4">
            <div
                class="d-flex flex-column flex-lg-row align-items-start align-items-lg-center justify-content-between gap-3 mb-3">
                <h5 class="card-title mb-0"><i class="fas fa-filter me-2 text-primary"></i>Filtros Avanzados</h5>
                <div class="d-flex gap-2 w-100 w-lg-auto">
                    <button id="btnFiltrarInmuebles" class="btn btn-primary flex-grow-1 flex-lg-grow-0">
                        <i class="fas fa-filter me-1"></i> Filtrar
                    </button>
                    <button id="btnResetInmuebles" class="btn btn-outline-secondary">
                        <i class="fas fa-undo"></i>
                    </button>
                </div>
            </div>

            <div class="row g-3">
                <!-- Filtro por estado -->
                <div class="col-md-3">
                    <label for="filtroEstado" class="form-label small text-muted mb-1">Estado</label>
                    <select class="form-select" id="filtroEstado">
                        <option value="" selected>Todos</option>
                        <option value="true">Activo</option>
                        <option value="false">Inactivo</option>
                    </select>
                </div>

                <!-- Filtro por propietario -->
                <div class="col-md-4">
                    <label for="filtroPropietario" class="form-label small text-muted mb-1">Propietario</label>
                    <input type="text" class="form-control" id="filtroPropietario" placeholder="Buscar por propietario">
                </div>

                <!-- Filtro por ubicación -->
                <div class="col-md-3">
                    <label for="filtroUbicacion" class="form-label small text-muted mb-1">Ubicación</label>
                    <input type="text" class="form-control" id="filtroUbicacion" placeholder="Buscar por ubicación">
                </div>

                <!-- Filtro por precio -->
                <div class="col-md-2">
                    <label for="filtroPrecio" class="form-label small text-muted mb-1">Precio (Máx)</label>
                    <input type="number" class="form-control" id="filtroPrecio" placeholder="Precio máximo">
                </div>
            </div>
        </div>
    </div>

    <!-- Card de Resultados -->
    <div class="card border-0 shadow-sm px-4 py-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table id="tablaInmuebles" class="table table-hover align-middle mb-0 table-responsive">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Propietario</th>
                            <th>Descripción</th>
                            <th>Dirección</th>
                            <th>Ubicación</th>
                            <th>Precio</th>
                            <th>Estado</th>
                            <th class="text-center pe-4">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var inmueble in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-medium">@inmueble.PropietarioNombre</td>
                                <td>
                                    <span class="d-inline-block text-truncate" style="max-width: 150px;"
                                        title="@inmueble.Fdescripcion">
                                        @inmueble.Fdescripcion
                                    </span>
                                </td>
                                <td>
                                    <span class="d-inline-block text-truncate" style="max-width: 150px;"
                                        title="@inmueble.Fdireccion">
                                        @inmueble.Fdireccion
                                    </span>
                                </td>
                                <td>@inmueble.Fubicacion</td>
                                <td>RD$ @inmueble.Fprecio.ToString("N2", new System.Globalization.CultureInfo("es-DO"))</td>
                                <td>
                                    <span
                                        class="badge @(inmueble.Factivo ? "bg-success bg-opacity-10 text-success" : "bg-danger bg-opacity-10 text-danger")"
                                        data-estado="@(inmueble.Factivo ? "1" : "0")">
                                        @(inmueble.Factivo ? "Activo" : "Inactivo")
                                    </span>
                                </td>
                                <td class="text-center pe-4">
                                    <div class="d-flex justify-content-center gap-2">
                                        @if (inmueble.Factivo)
                                        {
                                            <a href="javascript:void(0);" class="btn btn-sm btn-outline-primary editInmueble"
                                                data-id="@inmueble.FidInmueble" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-outline-primary" title="Editar (Inactivo)" disabled>
                                                <i class="fas fa-edit"></i>
                                            </button>
                                        }

                                        <form asp-action="CambiarEstado" method="post" class="d-inline cambiarEstadoForm">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@inmueble.FidInmueble" />
                                            <button type="submit"
                                                class="btn btn-sm @(inmueble.Factivo ? "btn-outline-secondary" : "btn-outline-success")"
                                                title="@(inmueble.Factivo ? "Desactivar" : "Activar")">
                                                <i class="fas @(inmueble.Factivo ? "fa-ban" : "fa-undo")"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>