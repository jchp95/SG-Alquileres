@model IEnumerable<Alquileres.Models.TbInquilino>

<div class="container-fluid px-4 py-4">
    <!-- Header -->
    <div
        class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3">
        <div>
            <h2 class="mb-1"><i class="fas fa-users me-2 text-primary"></i>Registro de Inquilinos</h2>
            <p class="text-muted mb-0">Gestión y consulta de inquilinos</p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-primary">
                <i class="fas fa-file-export me-1"></i> Exportar
            </button>
        </div>
    </div>

    <!-- Card de Filtros -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-4">
            <div
                class="d-flex flex-column flex-lg-row align-items-start align-items-lg-center justify-content-between gap-3 mb-3">
                <h5 class="card-title mb-0"><i class="fas fa-filter me-2 text-primary"></i>Filtros Avanzados</h5>
                <div class="d-flex gap-2 w-100 w-lg-auto">
                    <button id="btnFiltrarInquilinos" class="btn btn-primary flex-grow-1 flex-lg-grow-0">
                        <i class="fas fa-filter me-1"></i> Filtrar
                    </button>
                    <button id="btnResetInquilinos" class="btn btn-outline-secondary">
                        <i class="fas fa-undo"></i>
                    </button>
                </div>
            </div>

            <div class="row g-3">
                <!-- Filtro por estado -->
                <div class="col-md-4">
                    <label for="filtroEstado" class="form-label small text-muted mb-1">Estado</label>
                    <select class="form-select" id="filtroEstado">
                        <option value="" selected>Todos</option>
                        <option value="true">Activo</option>
                        <option value="false">Inactivo</option>
                    </select>
                </div>

                <!-- Filtro por nombre -->
                <div class="col-md-4">
                    <label for="filtroNombre" class="form-label small text-muted mb-1">Nombre</label>
                    <input type="text" class="form-control" id="filtroNombre" placeholder="Buscar por nombre">
                </div>

                <!-- Filtro por cédula -->
                <div class="col-md-4">
                    <label for="filtroCedula" class="form-label small text-muted mb-1">Cédula</label>
                    <input type="text" class="form-control" id="filtroCedula" placeholder="Buscar por cédula">
                </div>
            </div>
        </div>
    </div>

    <!-- Card de Resultados -->
    <div class="card border-0 shadow-sm px-4 py-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table id="tablaInquilinos" class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Nombre</th>
                            <th>Apellidos</th>
                            <th>Cédula</th>
                            <th>Dirección</th>
                            <th>Teléfono</th>
                            <th>Celular</th>
                            <th>Estado</th>
                            <th class="text-center pe-4">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var inquilino in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-medium">@inquilino.Fnombre</td>
                                <td>@inquilino.Fapellidos</td>
                                <td>@inquilino.Fcedula</td>
                                <td>
                                    <span class="d-inline-block text-truncate" style="max-width: 150px;"
                                        title="@inquilino.Fdireccion">
                                        @inquilino.Fdireccion
                                    </span>
                                </td>
                                <td id="telefono-input">@inquilino.Ftelefono</td>
                                <td>@inquilino.Fcelular</td>
                                <td>
                                    <span
                                        class="badge @(inquilino.Factivo ? "bg-success bg-opacity-10 text-success" : "bg-danger bg-opacity-10 text-danger")"
                                        data-estado="@(inquilino.Factivo ? "1" : "0")">
                                        @(inquilino.Factivo ? "Activo" : "Inactivo")
                                    </span>
                                </td>
                                <td class="text-center pe-4">
                                    <div class="d-flex justify-content-center gap-2">
                                        @if (inquilino.Factivo)
                                        {
                                            <a href="javascript:void(0);" class="btn btn-sm btn-outline-primary editInquilino"
                                                data-id="@inquilino.FidInquilino" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-outline-primary" title="Editar (Inactivo)" disabled>
                                                <i class="fas fa-edit"></i>
                                            </button>
                                        }

                                        <form asp-action="CambiarEstado" method="post" class="d-inline cambiarEstadoForm">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@inquilino.FidInquilino" />
                                            <button type="submit"
                                                class="btn btn-sm @(inquilino.Factivo ? "btn-outline-secondary" : "btn-outline-success")"
                                                title="@(inquilino.Factivo ? "Desactivar" : "Activar")">
                                                <i class="fas @(inquilino.Factivo ? "fa-ban" : "fa-undo")"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>