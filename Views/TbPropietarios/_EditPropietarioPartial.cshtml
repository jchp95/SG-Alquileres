@model Alquileres.Models.TbPropietario

<h3 class="mb-4">Editar Propietario</h3>

<div class="card shadow-sm rounded-4 p-4 mb-4">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        <input type="hidden" asp-for="FidPropietario" />

        <div class="mb-3">
            <label asp-for="Fnombre" class="form-label">Nombre</label>
            <input asp-for="Fnombre" class="form-control rounded-3" />
            <span asp-validation-for="Fnombre" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Fapellidos" class="form-label">Apellidos</label>
            <input asp-for="Fapellidos" class="form-control rounded-3" />
            <span asp-validation-for="Fapellidos" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Fcedula" class="form-label">Cédula</label>
            <input asp-for="Fcedula" class="form-control rounded-3" />
            <span asp-validation-for="Fcedula" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Fdireccion" class="form-label">Dirección</label>
            <input asp-for="Fdireccion" class="form-control rounded-3" />
            <span asp-validation-for="Fdireccion" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Ftelefono" class="form-label">Teléfono</label>
            <input asp-for="Ftelefono" class="form-control rounded-3 telefono-input" />
            <span asp-validation-for="Ftelefono" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Fcelular" class="form-label">Celular</label>
            <input asp-for="Fcelular" class="form-control rounded-3 telefono-input" />
            <span asp-validation-for="Fcelular" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <input type="submit" value="Guardar" class="btn btn-primary px-4 shadow-sm" />
            <a asp-action="Index" class="btn btn-outline-secondary px-4">Volver a la lista</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
