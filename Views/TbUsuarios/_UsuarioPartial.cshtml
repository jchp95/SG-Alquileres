@using Microsoft.AspNetCore.Identity
@model IEnumerable<Alquileres.Models.UsuarioViewModel>

@section Styles {
    <link rel="stylesheet" href="~/css/administrar-permisos.css" asp-append-version="true" />
}

<div class="container-fluid">
    <!-- Card de Filtros -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-4">
            <div
                class="d-flex flex-column flex-lg-row align-items-start align-items-lg-center justify-content-between gap-3 mb-3">
                <h5 class="card-title mb-0"><i class="fas fa-filter me-2 text-primary"></i>Filtros Avanzados</h5>
                <div class="d-flex gap-2 w-100 w-lg-auto">
                    <button id="btnResetFiltros" class="btn btn-outline-danger btn-sm" data-bs-toggle="tooltip"
                        data-bs-placement="right" title="Limpiar todos los filtros">
                        <i class="fas fa-broom me-2"></i> Limpiar filtros
                    </button>
                </div>
            </div>

            <div class="row g-3">
                <!-- Filtro por estado -->
                <div class="col-md-4">
                    <label for="filtroEstado" class="form-label small text-muted mb-1">Estado</label>
                    <select class="form-select" id="filtroEstado">
                        <option value="" selected>Todos</option>
                        <option value="true">Activo</option>
                        <option value="false">Inactivo</option>
                    </select>
                </div>

                <!-- Filtro por nombre -->
                <div class="col-md-4">
                    <label for="filtroNombre" class="form-label small text-muted mb-1">Nombre</label>
                    <input type="text" class="form-control" id="filtroNombre" placeholder="Buscar por nombre">
                </div>

                <!-- Filtro por usuario -->
                <div class="col-md-4">
                    <label for="filtroUsuario" class="form-label small text-muted mb-1">Usuario</label>
                    <input type="text" class="form-control" id="filtroUsuario" placeholder="Buscar por usuario">
                </div>
            </div>
        </div>
    </div>

    <!-- Card de Resultados -->
    <div class="card border-0 shadow-sm px-4 py-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table id="tablaUsuarios" class="table table-hover align-middle mb-0 table-responsive">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4 d-none">Id</th>
                            <th class="ps-4">Nombre</th>
                            <th>Usuario</th>
                            <th>Email</th>
                            <th>Rol</th>
                            <th>Estado</th>
                            <th class="text-center pe-4">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var usuario in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-medium d-none">@usuario.FidUsuario</td>
                                <td class="ps-4 fw-medium">@usuario.Fnombre</td>
                                <td>@usuario.Fusuario</td>
                                <td>@usuario.Femail</td>
                                <td>@usuario.SelectedRole</td>
                                <td>
                                    <span
                                        class="badge @(usuario.Factivo == true ? "bg-success bg-opacity-10 text-success" : "bg-danger bg-opacity-10 text-danger")"
                                        data-estado="@(usuario.Factivo == true ? "1" : "0")">
                                        @(usuario.Factivo == true ? "Activo" : "Inactivo")
                                    </span>
                                </td>
                                <td class="text-center pe-4">
                                    <div class="d-flex justify-content-center gap-2">
                                        @if (usuario.Factivo == true)
                                        {
                                            <!-- Botón Editar -->
                                            <a href="javascript:void(0);" class="btn btn-sm btn-outline-primary editUsuario"
                                                data-id="@usuario.FidUsuario" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-outline-primary" title="Editar (Inactivo)" disabled>
                                                <i class="fas fa-edit"></i>
                                            </button>
                                        }

                                        <!-- Botón Cambiar Estado -->
                                        <form asp-action="CambiarEstado" method="post" class="d-inline cambiarEstadoForm">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@usuario.FidUsuario" />
                                            <button type="submit"
                                                class="btn btn-sm @(usuario.Factivo == true ? "btn-outline-secondary" : "btn-outline-success")"
                                                title="@(usuario.Factivo == true ? "Desactivar" : "Activar")">
                                                <i class="fas @(usuario.Factivo == true ? "fa-ban" : "fa-undo")"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>


</div>
